#!/bin/bash

#
# Procesa las peticiones pendientes para cada una de las etiquetas.
#

# venv's python
PYTHON="/home/vcarceler/sirin/venv/bin/python"
# Sirin's manage.py
MANAGE="/home/vcarceler/sirin/sirin/manage.py"

# ARA
playbooks="/home/vcarceler/playbooks-ubuntu2004"
export ANSIBLE_CALLBACK_PLUGINS="$(python3 -m ara.setup.callback_plugins)"

for x in ada-u2204.yml aif-u2204.yml ampa-u2204.yml biblioteca_wifi-u2204.yml carret10-u2204.yml carret11-u2004.yml carret12-u2004.yml carret13-u2004.yml carret14-u2004.yml carret15-u2004.yml carret16-u2204.yml carret17-u2204.yml carret18-u2204.yml chomsky-u2004.yml consergeria-u2004.yml darwin-u2204.yml dpt-aif-u2004.yml dpt-cast-u2004.yml dpt-cat-u2004.yml dpt-ciencies-u2004.yml dpt-ciencies-lab-u2004.yml dpt-dibuix-u2204.yml dpt-edufis-u2004.yml dpt-erasmus-u2004.yml dpt-filosofia-u2004.yml dpt-fisicaiquimica-u2004.yml dpt-historia-u2004.yml dpt-inf-u2004.yml dpt-inf-u2204.yml dpt-ing-u2004.yml escher-u2204.yml lenovo-v510-u2004.yml dpt-mat-u2004.yml dpt-musica-u2004.yml dpt-psico-u2004.yml dpt-religio-u2004.yml dpt-tecno-u2004.yml esobatx-u2204.yml esobatx_dept-u2004.yml esobatx_wifi-u2204.yml init-alumnes-f34.yml matricula-u2004.yml portatils-alumnes-u2004.yml portatils-alumnes-f34.yml portatils-docents-u2004.yml portatils-docents-u2204.yml saladeguardies-u2004.yml saladeprofessors-u2204.yml secretaria-u2004.yml snowden-u2204.yml stallman-u2204.yml snowden-u2004.yml tesla-u2204.yml torvalds-u2204.yml turing-u2204.yml
do
	# Comprobamos si hay peticiones pendientes
	n=`$PYTHON $MANAGE getnumberofrequests $x`
	echo "Para la etiqueta $x hay $n peticiones pendientes."
	if [ $n -gt 0 ]
	then
		hosts=`$PYTHON $MANAGE gethosts $x`
		echo "Lanzo ansible-playbook -i $playbooks/hosts $playbooks/$x --limit=$hosts"
		nice ansible-playbook -i $playbooks/hosts $playbooks/$x --limit=$hosts &
	else
		echo No hay nada que hacer
	fi
done

echo "Esperando que acaben las tareas ansible-playbook..."
wait
echo "Todos los playbooks de ansible se han completado."
